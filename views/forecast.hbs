<h1>Weather Forecast</h1>
<p>This page will get you forecast for your specified city of next 5 days with intervals of 3 hours.</p>

<form action="/getCityWeather" method="get">
	<div class="form-group">
	<label for="exampleInputEmail1">Email address</label>
	<input type="text" class="form-control" id="name" name="name" placeholder="New York, US">
	</div>
	<button type="submit" class="btn btn-success">Richiedi</button>
</form>

{{#if forecast}}
	<br>
	<div class="table-responsive">
	  	<table class="table table-striped table-bordered table-hover">
	    	<thead>
	    		<tr>
	    			<th>Time</th>
	    			<th>Forecast</th>
	    			<th>Temperature</th>
	    		</tr>
	    	</thead>
	    	<tbody>
	    		{{#forecast}}
	    		<tr>
	    			<td>{{dt_txt}}</td>
	    			<td>{{weather.[0].description}}</td>
	    			<td>{{main.temp}}</td>
	    		</tr>
	    		{{/forecast}}
	    	</tbody>
	  	</table>
	</div>
{{/if}}

